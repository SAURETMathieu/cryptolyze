{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "es2021",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noErrorTruncation": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/src/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/services/*": ["./src/services/*"],
      "@/pages/*": ["src/pages/*"],
      "@/config/*": ["./config/*"],
      "@/styles/*": ["./styles/*"],
      "@/types/*": ["./types/*"],
      "@/public/*": ["./public/*"],
      "@/customer/*": ["./src/app/customer/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/middleware.ts"
  ],
  "exclude": [
    "node_modules",
    "templates",
    "migrations",
    ".next",
    ".env.local",
    ".env",
    ".env.production",
    ".env.development",
    ".env.test",
    ".env.staging",
    ".env.production",
    ".env.development",
    ".env.test",
    ".env.staging",
    ".cursor",
    ".vscode",
    "build",
    "dist",
    "coverage",
    "cache",
    ".cache",
    "public",
    "CHANGELOG.md",
    ".yarn"
  ]
}
